<section class="admin-menu-items-edit">

  <header class="page-header">
    <h1>Admin &raquo; Edit Menu Item</h1>
  </header>

  <div class="index-link">
    <%= link_to 'All Menu Items', [:admin, :menu_items], class: 'btn btn-info' %>
  </div>

  <div class="row">
    <div class="col-sm-6 col-sm-offset-1">
      <%= form_for [:admin, @item] do |form| %>

        <% if form.object.errors.any? %>
          <div class="alert alert-danger">
            <strong>The following errors prevented saving:</strong>
            <ul>
              <% form.object.errors.full_messages.each do |error| %>
                <li><%= error %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="form-group">
          <%= form.label :name %>
          <%= form.text_field :name, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= form.label :description %>
          <%= form.text_area :description, class: 'form-control' %>
        </div>

        <div class="form-group category-group">
          <%= form.label :category %>
          <%= form.select :category, ['appetizer', 'main', 'combo', 'alcohol', 'beverage', 'special', 'extra'], class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= form.label :subcategory %>
          <%= form.text_field :subcategory, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= form.label :serving_size %>
          <%= form.number_field :serving_size, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= form.label :price %>
          <%= form.text_field :price, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= form.label :img_url %>
          <%= form.text_field :img_url, class: 'form-control' %>
        </div>

        <%= form.submit 'Update Menu Item', class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>

</section>
